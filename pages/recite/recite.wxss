}

.error-item, .suggestion-item {
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.error-position {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.error-type {
  display: block;
  font-size: 26rpx;
  margin-bottom: 5rpx;
}

.error-type.severe {
  color: #C62828;
  font-weight: bold;
}

