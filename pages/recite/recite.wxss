/* 全局样式优化 */
page {
  background: linear-gradient(135deg, #f5f7ff, #eef2ff);
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  padding-bottom: 120rpx; /* 为记录按钮留出空间 */
}

/* 标题样式优化 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(74, 111, 165, 0.2);
}

.section-title .icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.section-title .title-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a6fa5;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 录音区域样式优化 */
.recording-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin: 30rpx 0;
  border: 2rpx dashed rgba(74, 111, 165, 0.5);
  box-shadow: 0 10rpx 30rpx rgba(74, 111, 165, 0.15);
  backdrop-filter: blur(10rpx);
}

.recording-status {
  text-align: center;
  margin-bottom: 40rpx;
}

.recording-icon {
  font-size: 100rpx;
  margin-bottom: 25rpx;
  transition: all 0.3s ease;
}

.recording-icon.pulse {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.1); opacity: 1; }
  100% { transform: scale(1); opacity: 0.8; }
}

.recording-text {
  font-size: 34rpx;
  color: #4a6fa5;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
}

.recording-time {
  font-size: 30rpx;
  color: #666;
  font-family: monospace;
  font-weight: 500;
}

/* 按钮样式优化 */
.btn {
  height: 90rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  position: relative;
  overflow: hidden;
  padding: 0 40rpx;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.15);
}

.btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 200%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.btn:active::after {
  left: 100%;
}

.btn-record {
  background: linear-gradient(135deg, #27ae60, #2ecc71);
  color: white;
}

.btn-stop {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
}

.btn-play {
  background: linear-gradient(135deg, #3498db, #2980b9);
  color: white;
}

.btn-primary {
  background: linear-gradient(135deg, #4a6fa5, #6c91c5);
  color: white;
  margin-top: 40rpx;
}

.btn-reupload {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
  color: white;
  margin-top: 50rpx;
}

.btn-records {
  background: linear-gradient(135deg, #e67e22, #d35400);
  color: white;
  margin: 30rpx auto;
  width: 90%;
  max-width: 400rpx;
}

.btn-icon {
  margin-left: 15rpx;
  font-size: 36rpx;
}

/* 录音波形 */
.waveform {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  gap: 6rpx;
  margin-top: 30rpx;
}

.wave-bar {
  width: 8rpx;
  background: linear-gradient(to top, #4a6fa5, #6c91c5);
  border-radius: 4rpx;
  transition: height 0.2s;
  box-shadow: 0 2rpx 8rpx rgba(74, 111, 165, 0.3);
}

/* 录音信息 */
.recording-info {
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 1rpx solid rgba(230, 240, 255, 0.8);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid rgba(230, 240, 255, 0.8);
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.info-item .label {
  color: #666;
  font-weight: bold;
}

.info-item .value {
  color: #4a6fa5;
  font-weight: 500;
}

/* 选择器样式优化 */
.poem-selector {
  margin: 40rpx 0;
}

.picker {
  display: flex;
  align-items: center;
  padding: 25rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  border: 1rpx solid rgba(230, 240, 255, 0.8);
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.picker:active {
  transform: translateY(4rpx);
  background: rgba(255, 255, 255, 1);
}

.picker-label {
  font-size: 30rpx;
  color: #666;
}

.picker-value {
  flex: 1;
  font-size: 30rpx;
  color: #4a6fa5;
  font-weight: bold;
  padding: 0 15rpx;
}

.picker-arrow {
  color: #4a6fa5;
  font-size: 30rpx;
}

/* 点评结果区域样式优化 */
.audio-section {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin: 30rpx 0;
  box-shadow: 0 15rpx 40rpx rgba(74, 111, 165, 0.15);
}

.evaluation-section {
  margin-top: 40rpx;
}

.evaluation-content {
  margin-top: 30rpx;
}

.evaluation-item {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(230, 240, 255, 0.8);
  transition: all 0.3s ease;
}

.evaluation-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.evaluation-label {
  font-size: 34rpx;
  font-weight: bold;
  color: #4a6fa5;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.evaluation-label::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 40rpx;
  background: #4a6fa5;
  border-radius: 5rpx;
  margin-right: 15rpx;
}

.evaluation-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  padding: 20rpx;
  border-radius: 16rpx;
  background: rgba(240, 249, 255, 0.5);
  border-left: 4rpx solid #4a6fa5;
}

/* 详细评分样式优化 */
.detail-scores {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.detail-item {
  text-align: center;
  flex: 1;
  padding: 20rpx;
  background: rgba(240, 249, 255, 0.5);
  border-radius: 16rpx;
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

.detail-item:active {
  transform: scale(0.95);
}

.detail-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4a6fa5;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  display: block;
}

/* 错误列表样式优化 */
.error-list {
  margin-top: 20rpx;
}

.error-item {
  background: rgba(255, 240, 240, 0.5);
  border-left: 8rpx solid #e74c3c;
  padding: 30rpx;
  border-radius: 0 20rpx 20rpx 0;
  margin-bottom: 25rpx;
  box-shadow: 0 5rpx 20rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.error-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.error-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.error-type {
  font-weight: bold;
  color: #c0392b;
  font-size: 32rpx;
}

.severity {
  display: inline-block;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

.severity.high {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
}

.severity.medium {
  background: linear-gradient(135deg, #f39c12, #e67e22);
}

.severity.low {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
}

.error-detail {
  font-size: 30rpx;
  color: #666;
  margin: 15rpx 0;
  display: flex;
}

.error-detail .label {
  font-weight: bold;
  min-width: 140rpx;
  color: #4a6fa5;
}

.error-detail .value {
  flex: 1;
}

/* 建议列表样式优化 */
.evaluation-suggestions {
  background: rgba(240, 249, 255, 0.5);
  padding: 25rpx;
  border-radius: 16rpx;
  margin-top: 15rpx;
}

.suggestion-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  line-height: 1.6;
  padding: 15rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.7);
  transition: all 0.3s ease;
}

.suggestion-item:active {
  transform: translateX(10rpx);
  background: rgba(255, 255, 255, 0.9);
}

.suggestion-index {
  font-weight: bold;
  color: #4a6fa5;
  margin-right: 15rpx;
  min-width: 40rpx;
}

.suggestion-text {
  flex: 1;
  color: #555;
}

/* 重新上传区域 */
.reupload-section {
  margin-top: 50rpx;
  text-align: center;
}

/* 新增：背诵记录按钮容器 */
.records-btn-container {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 100;
}

/* 新增：背诵记录弹窗样式 */
.records-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.records-modal-content {
  background: white;
  width: 90%;
  max-width: 600rpx;
  height: 80%;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: #f8f9fa;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.records-actions {
  display: flex;
  align-items: center;
}

.refresh-btn {
  color: #007AFF;
  font-size: 26rpx;
  margin-right: 20rpx;
  padding: 10rpx 15rpx;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx 15rpx;
}

.records-list {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.records-loading, .records-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  padding: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #666;
}

.records-scroll {
  height: 100%;
}

.record-item {
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.record-item:active {
  background: #f8f9fa;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.record-score {
  font-size: 28rpx;
  font-weight: bold;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.record-score.good {
  background: #E8F5E8;
