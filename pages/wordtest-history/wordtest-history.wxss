/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f0f9ff, #e6f7ff);
  padding: 20rpx;
  box-sizing: border-box;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif; /* 统一字体 */
}

/* 头部样式 - 更精致的渐变和阴影 */
.header {
  background: linear-gradient(to right, #1a73e8, #4a90e2);
  color: white;
  padding: 30rpx;
  border-radius: 20rpx; /* 更大圆角 */
  margin-bottom: 25rpx; /* 增加间距 */
  box-shadow: 0 6rpx 16rpx rgba(26, 115, 232, 0.4);
  position: relative;
  overflow: hidden;
}

/* 头部装饰效果 */
.header::after {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.title {
  font-size: 40rpx; /* 更大字体 */
  font-weight: 700; /* 更粗字体 */
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15); /* 更明显阴影 */
  letter-spacing: 0.5rpx; /* 字间距 */
  position: relative;
  z-index: 1;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

/* 列表容器 */
.list-container {
  height: calc(100vh - 200rpx); /* 调整高度 */
  padding: 5rpx; /* 增加内边距 */
}

/* 卡片样式 - 更精致的材质效果 */
.card {
  background: linear-gradient(to bottom, #ffffff, #f8fbff);
  border-radius: 24rpx; /* 更大圆角 */
  padding: 32rpx; /* 更大内边距 */
  margin-bottom: 28rpx; /* 增加间距 */
  box-shadow: 0 8rpx 24rpx rgba(26, 115, 232, 0.15);
  position: relative;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1); /* 更平滑过渡 */
  border: 1rpx solid rgba(26, 115, 232, 0.05); /* 添加边框 */
}

.card:active {
  transform: translateY(-6rpx); /* 更明显的上浮效果 */
  box-shadow: 0 12rpx 30rpx rgba(26, 115, 232, 0.25);
}

/* 卡片悬停效果（小程序中实际是点击效果） */
.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(26, 115, 232, 0.05) 0%, transparent 80%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.card:active::before {
  opacity: 1;
}

/* 右上角容器 */
.top-right-container {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  text-align: right;
  z-index: 2;
}

.username {
  font-size: 28rpx;
  color: #555;
  display: block;
  margin-bottom: 8rpx;
  font-weight: 500;
  background: rgba(255, 255, 255, 0.7);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4rpx); /* 毛玻璃效果 */
}

.time-section {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-bottom: 15rpx;
  background: rgba(255, 255, 255, 0.7);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
  backdrop-filter: blur(4rpx); /* 毛玻璃效果 */
}

.time-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
  color: #1a73e8;
}

.time {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 14rpx; /* 更大间距 */
  margin-top: 12rpx;
}

/* 查看按钮样式 - 更精致的材质效果 */
.view-btn {
  background: linear-gradient(to right, #1a73e8, #4a90e2);
  color: white;
  font-size: 28rpx;
  height: 64rpx; /* 更高按钮 */
  line-height: 64rpx;
  border-radius: 32rpx; /* 完全圆形 */
  padding: 0 35rpx; /* 更大内边距 */
  margin: 0;
  width: auto;
  box-shadow: 0 6rpx 14rpx rgba(26, 115, 232, 0.4);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  border: none;
}

.view-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.view-btn:active {
  transform: scale(0.96);
  box-shadow: 0 3rpx 8rpx rgba(26, 115, 232, 0.4);
}

.view-btn:active::before {
  opacity: 1;
}

/* 删除按钮样式 - 更精致的材质效果 */
.delete-btn {
  background: linear-gradient(to right, #ff6b6b, #ff8e8e);
  color: white;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  padding: 0 35rpx;
  margin: 0;
  width: auto;
  box-shadow: 0 6rpx 14rpx rgba(255, 107, 107, 0.4);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
  border: none;
}

.delete-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0));
  opacity: 0;
  transition: opacity 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.96);
  box-shadow: 0 3rpx 8rpx rgba(255, 107, 107, 0.4);
}

.delete-btn:active::before {
  opacity: 1;
}

/* 单词区域 */
.word-section {
  margin-top: 130rpx; /* 调整间距 */
  margin-bottom: 25rpx;
}

.word {
  font-size: 72rpx; /* 更大字体 */
  font-weight: 800; /* 更粗字体 */
  color: #1a73e8;
  position: relative;
  top: -55rpx;
  left: 100rpx;
  text-shadow: 0 3rpx 6rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 1rpx; /* 字间距 */
  transition: transform 0.3s ease; /* 添加过渡效果 */
}

.word:active {
  transform: scale(1.02); /* 点击时轻微放大 */
}

/* 空状态 - 更精致的动画效果 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0; /* 更大间距 */
  animation: fadeIn 0.8s cubic-bezier(0.22, 0.61, 0.36, 1); /* 更平滑动画 */
}

@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(30rpx) scale(0.95); }
  100% { opacity: 1; transform: translateY(0) scale(1); }
}

.empty-icon {
  font-size: 150rpx; /* 更大图标 */
  color: #c0c4cc;
  margin-bottom: 30rpx;
  opacity: 0.8;
  animation: float 3s ease-in-out infinite; /* 浮动动画 */
}

@keyframes float {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
  100% { transform: translateY(0); }
}

.empty-text {
  font-size: 40rpx; /* 更大字体 */
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 600; /* 更粗字体 */
  text-align: center;
}

.empty-hint {
  font-size: 30rpx;
  color: #999;
  text-align: center;
  max-width: 80%;
  line-height: 1.5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  font-size: 30rpx;
  color: #666;
  animation: pulse 1.8s infinite;
}

@keyframes pulse {
  0% { opacity: 0.7; transform: scale(0.98); }
  50% { opacity: 1; transform: scale(1); }
  100% { opacity: 0.7; transform: scale(0.98); }
}

.loading-icon {
  margin-bottom: 20rpx;
  font-size: 50rpx; /* 更大图标 */
  animation: spin 1.2s linear infinite;
  color: #1a73e8;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

/* 没有更多 */
.no-more {
  text-align: center;
  font-size: 30rpx;
  color: #888;
  padding: 45rpx 0;
  font-style: italic;
  position: relative;
}

.no-more::before,
.no-more::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 30%;
  height: 1rpx;
  background: linear-gradient(to right, transparent, #888, transparent);
}

.no-more::before {
  left: 5%;
}

.no-more::after {
  right: 5%;
}