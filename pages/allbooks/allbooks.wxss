@media screen and (max-width: 400px) {
  .book-item {
    margin: 24rpx 16rpx;
    padding: 24rpx;
  }
  
  .image-container {
    width: 160rpx;
    height: 200rpx;
    margin-right: 24rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .description {
    font-size: 26rpx;
  }
