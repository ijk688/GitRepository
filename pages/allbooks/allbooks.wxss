.book-item {
  display: flex;
  flex-direction: row;
  margin: 30rpx 24rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

/* æ‚¬åœ/ç‚¹å‡»æ•ˆæœ */
.book-item:active {
  transform: translateY(4rpx) scale(0.995);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  background: #fafafa;
}

/* å…‰æ³½æ•ˆæœ */
.book-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.3), transparent);
}

/* å›¾ç‰‡å®¹å™¨ */
.image-container {
  position: relative;
  width: 200rpx;
  height: 260rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e7eb 100%);
}

/* å›¾ç‰‡æ ·å¼ */
.book-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all 0.3s ease;
  border-radius: 20rpx;
}

.book-image:active {
  transform: scale(0.95);
}

/* å›¾ç‰‡åŠ è½½çŠ¶æ€ */
.image-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #6c757d;
  font-size: 26rpx;
  border-radius: 20rpx;
}

.image-loading::before {
  content: "ğŸ“–";
  font-size: 40rpx;
  margin-bottom: 12rpx;
  animation: spin 1s linear infinite;
}

/* å›¾ç‰‡é”™è¯¯æç¤º */
.image-error {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  background: rgba(245, 34, 45, 0.9);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  backdrop-filter: blur(8rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  animation: pulse 2s infinite;
}

/* æ–‡å­—å†…å®¹åŒºåŸŸ */
.book-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 260rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 18rpx;
  line-height: 1.4;
  letter-spacing: 0.3rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.meta {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 22rpx;
  flex-wrap: wrap;
}

.author {
  font-weight: 500;
  color: #1890ff;
  margin-right: 18rpx;
  position: relative;
}

.author::after {
  content: '';
  position: absolute;
  right: -12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 4rpx;
  background: #ccc;
  border-radius: 50%;
}

.dynasty {
  color: #888;
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-style: italic;
}

.description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-grow: 1;
}

/* åˆ—è¡¨åº•éƒ¨æç¤º - ç¾åŒ–ç‰ˆ */
.list-end {
  text-align: center;
  padding: 50rpx 20rpx;
  color: #999;
  font-size: 28rpx;
  position: relative;
  margin: 40rpx 30rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(10rpx);
}

.list-end::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 15%;
  right: 15%;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e5e5e5 20%, #e5e5e5 80%, transparent);
  transform: translateY(-50%);
}

.list-end text {
  background: rgba(255, 255, 255, 0.9);
  padding: 0 40rpx;
  position: relative;
  z-index: 1;
  display: block;
}

/* åŠ¨ç”»å®šä¹‰ */
@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.05); }
}

