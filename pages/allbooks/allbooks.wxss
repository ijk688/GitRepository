}

/* æµ®åŠ¨åŠ¨ç”» */
@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-10rpx); }
}

/* æ‘‡æ‘†åŠ¨ç”» */
@keyframes shake {
  0% { transform: translateX(0rpx); }
  100% { transform: translateX(4rpx); }
}

