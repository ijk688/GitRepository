/* 整体容器 - 蓝调古风背景 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f0f5fb url('data:image/svg+xml;utf8,<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg"><path d="M0 0L100 100M100 0L0 100" stroke="%23d1e3f6" stroke-width="0.8" fill="none"/></svg>');
  font-family: 'PingFang SC', 'STKaiti', 'Helvetica Neue', sans-serif;
  padding-top: 20rpx;
  position: relative; /* 添加相对定位 */
}

/* 新增：固定位置的背诵按钮 */
.recite-btn-fixed {
  position: fixed; /* 改为固定定位 */
  top: 60rpx; /* 距离顶部距离 */
  right: 30rpx; /* 距离右侧距离 */
  padding: 10rpx 20rpx;
  background: linear-gradient(to right, #4a86e8, #3a76d8);
  color: white;
  font-size: 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(74, 134, 232, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000; /* 确保按钮位于最上层 */
}

.recite-btn-fixed:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(74, 134, 232, 0.3);
}

/* 顶部导航栏 - 蓝调设计 */
.header {
  position: relative;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to bottom, #ffffff, #e6f0ff);
  border-bottom: 1rpx solid #c2d8f0;
}

.back-btn {
  position: absolute;
  left: 20rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(52, 122, 226, 0.1);
}

.back-icon {
  width: 38rpx;
  height: 38rpx;
  filter: invert(50%) sepia(99%) saturate(500%) hue-rotate(195deg);
}

/* 修改：标题容器 */
.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c6dcc;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.08);
}

/* 作者信息 - 蓝调印章 */
.author-info {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0 16rpx;
  margin: 10rpx 30rpx 0;
  background: #f8fbff;
  border-radius: 16rpx;
  box-shadow: 0 3rpx 14rpx rgba(86, 140, 230, 0.08);
  border: 1rpx solid #d6e6ff;
}

.author-info::before {
  content: "";
  position: absolute;
  top: -12rpx;
  width: 100rpx;
  height: 4rpx;
  background: #4a86e8;
  border-radius: 2rpx;
}

.dynasty {
  font-size: 26rpx;
  color: #4a86e8;
  margin-bottom: 6rpx;
  padding: 0 16rpx;
  background: rgba(74, 134, 232, 0.08);
  border-radius: 10rpx;
}

.author {
  font-size: 40rpx;
  color: #2c5db3;
  font-weight: bold;
  letter-spacing: 3rpx;
  margin-top: 4rpx;
}

/* 内容区域 - 布局上移 */
.content-scroll {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

/* 板块样式 - 蓝调纸卷 */
.section {
  position: relative;
  margin-bottom: 40rpx;
  padding: 28rpx 24rpx;
  background: #ffffff;
  border-radius: 14rpx;
  box-shadow: 0 4rpx 16rpx rgba(86, 140, 230, 0.05);
  border: 1rpx solid #deedff;
}

.section-title {
  position: relative;
  font-size: 32rpx;
  font-weight: bold;
  color: #4a86e8;
  margin-bottom: 20rpx;
  padding-left: 18rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #4a86e8;
  border-radius: 3rpx;
}

.section-content {
  font-size: 40rpx;
  color: #345a9c;
  line-height: 1.7;
  text-align: justify;
}

/* 原文特殊样式 - 蓝调竖排 */
.original-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.original-paragraph {
  font-size: 36rpx;
  line-height: 1.7;
  color: #1d4b93;
  font-weight: 500;
  margin: 12rpx 0;
  padding: 16rpx 0;
  text-align: center;
  letter-spacing: 5rpx;
  position: relative;
}

.original-paragraph::before,
.original-paragraph::after {
  content: "·";
  color: #a6c4f3;
  margin: 0 18rpx;
}

/* 相关古诗 - 蓝调书签 */
.related-poems {
  display: flex;
  flex-direction: column;
  margin-top: -6rpx;
}

.related-poem {
  position: relative;
  padding: 24rpx 28rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(to right, #f4faff, #ecf5ff);
  border-radius: 10rpx;
  border-left: 6rpx solid #7db1ff;
}

.related-poem:active {
  background: linear-gradient(to right, #e6f0ff, #d9e9ff);
}

.related-title {
  font-size: 30rpx;
  color: #3c7be0;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.related-author {
  font-size: 26rpx;
  color: #6c9aea;
}