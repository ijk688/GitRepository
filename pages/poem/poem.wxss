/* 容器样式优化 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, rgba(230, 247, 255, 0.8), rgba(248, 249, 250, 0.8)), 
              url('https://newlan.oss-cn-shanghai.aliyuncs.com/%E9%B1%BC.jpg');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  position: relative;
  padding-bottom: 150rpx;
}

/* 搜索栏 - 增强视觉层次感 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  padding: 22rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.18);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid #e6f7ff;
}

.search-input {
  flex: 1;
  height: 86rpx;
  border: 1rpx solid #d9e9fc;
  border-radius: 46rpx;
  padding: 0 35rpx;
  font-size: 32rpx;
  margin-right: 24rpx;
  background-color: rgba(240, 249, 255, 0.9);
  box-shadow: inset 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #1890ff;
  background-color: #ffffff;
  box-shadow: inset 0 3rpx 12rpx rgba(24, 144, 255, 0.1);
}

.search-btn {
  height: 86rpx;
  min-width: 140rpx;
  border-radius: 46rpx;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  font-size: 32rpx;
  line-height: 86rpx;
  padding: 0 20rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.35);
  font-weight: 500;
  transition: all 0.15s;
}

.search-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 3rpx 12rpx rgba(24, 144, 255, 0.35);
}

/* 年级容器样式 - 修改为更小尺寸并靠左 */
.grade-container {
  display: flex;
  align-items: center;
  justify-content: flex-start; /* 靠左对齐 */
  margin: 15rpx 30rpx;
  padding: 8rpx 20rpx; /* 减小内边距 */
  background: linear-gradient(to right, #e6f7ff, #ffffff); /* 淡蓝到白色的渐变 */
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(139, 69, 19, 0.05); /* 更淡的阴影 */
  max-width: 300rpx; /* 限制最大宽度 */
  align-self: flex-start; /* 靠左对齐 */
  white-space: nowrap; /* 添加此行：禁止换行 */
  margin-top: -45rpx;
}

.grade-label {
  font-size: 28rpx; /* 减小字体大小 */
  color: #1890ff; /* 使用蓝色 */
  margin-right: 10rpx; /* 减小间距 */
  font-weight: bold;
  white-space: nowrap; /* 添加此行：禁止换行 */
}

.grade-display {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5); /* 半透明白色背景 */
  padding: 6rpx 15rpx; /* 减小内边距 */
  border-radius: 8rpx; /* 减小圆角 */
  border: 1rpx solid rgba(24, 144, 255, 0.2); /* 淡蓝色边框 */
  white-space: nowrap; /* 添加此行：禁止换行 */
}

.grade-value {
  font-size: 30rpx; /* 减小字体大小 */
  color: #1890ff; /* 使用蓝色 */
  font-weight: bold;
  white-space: nowrap; /* 添加此行：禁止换行 */
  overflow: hidden; /* 隐藏溢出内容 */
  text-overflow: ellipsis; /* 溢出时显示省略号 */
}
/* 结果列表 - 优化留白和结构 */
.result-list {
  flex: 1;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  padding-top: 0rpx;
  padding-bottom: 10rpx;
}

.result-count {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  padding: 0 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 诗词卡片 - 优雅设计 */
.result-card {
  background: rgba(255, 255, 255, 0.85); /* 增加透明度以适应背景图 */
  border-radius: 24rpx;
  padding: 36rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(221, 238, 255, 0.8);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
}

.result-card:active {
  transform: translateY(-6rpx);
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.1);
}

.result-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #1890ff, #52c41a);
  opacity: 0.8;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.45;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-left: 20rpx;
  position: relative;
}

.title::after {
  content: "·";
  position: absolute;
  left: 0;
  top: 0;
  color: #1890ff;
  font-weight: 900;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx dashed #e8f0fa;
}

.author, .dynasty {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  position: relative;
  padding-left: 8rpx;
}

.author::before {
  content: "作者: ";
  color: #1890ff;
  font-weight: 500;
}

.dynasty::before {
  content: "朝代: ";
  color: #1890ff;
  font-weight: 500;
}

.content {
  font-size: 34rpx;
  color: #333;
  line-height: 1.75;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  flex: 1;
  font-family: "KaiTi", "楷体", sans-serif;
  text-indent: 2em;
  padding-top: 8rpx;
}

/* 空状态与加载状态增强 */
.empty-result, .loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
  padding-top: 100rpx;
}

.empty-result .empty-icon {
  font-size: 200rpx;
  color: #e6f7ff;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #595959;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.empty-tip {
  font-size: 30rpx;
  color: #8c8c8c;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.suggestion-btn {
  display: inline-block;
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  margin: 6rpx 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(24, 144, 255, 0.2);
  border-radius: 50%;
  border-top-color: #1890ff;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
/* 分页容器优化 - 美化版 */
.pagination-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top: 1rpx solid #e6f7ff;
  z-index: 100;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
}

/* 移除总条数显示 */
.total-count {
  display: none;
}

/* 页码控制 - 重新布局和美化 */
.pagination-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  max-width: 100%;
}

/* 左右箭头按钮 - 优化版 */
.pagination-arrow {
  width: 60rpx;                                  /* ✅ 设置合理宽度 */
  height: 60rpx;                                 /* ✅ 设置合理高度 */
  border-radius: 50%;                            /* ✅ 圆形外观 */
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f6f9ff 0%, #e6f7ff 100%);  /* ✅ 柔和渐变背景 */
  border: 2rpx solid rgba(24, 144, 255, 0.2);    /* ✅ 蓝色透明边框 */
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  flex-shrink: 0;                                /* ✅ 防止被压缩 */
}

/* 箭头按钮伪元素光效 */
.pagination-arrow::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.1), transparent);
  transition: left 0.6s ease;
}

/* 激活时（点击/触摸）的光效动画 */
.pagination-arrow:active::before {
  left: 100%;
}

/* 激活状态下的按钮反馈 */
.pagination-arrow:active {
  transform: translateY(2rpx) scale(0.95);       /* ✅ 轻微下沉和缩放 */
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.25); /* ✅ 增强阴影 */
  background: linear-gradient(135deg, #e6f7ff 0%, #cce7ff 100%); /* ✅ 稍微变化的背景 */
}

/* 禁用状态 */
.pagination-arrow.disabled {
  opacity: 0.4;                                  /* ✅ 半透明表示不可点击 */
  background: #f5f5f5;                           /* ✅ 灰色背景 */
  border-color: #e0e0e0;                         /* ✅ 灰色边框 */
  color: #ccc;
}

/* 禁用状态下禁止激活反馈 */
.pagination-arrow.disabled:active {
  transform: none;
  box-shadow: none;
  background: #f5f5f5;
}

/* 箭头图标样式 */
.arrow-icon {
  width: 24rpx;                                  /* ✅ 图标大小适中 */
  height: 24rpx;                                 /* ✅ 图标大小适中 */
  transition: transform 0.2s ease;
}

/* 激活时图标微缩 */
.pagination-arrow:active .arrow-icon {
  transform: scale(0.9);
}

/* 当前页码容器 - 美化版 */
.page-current-container {
  min-width: 80rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.page-current-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.page-current-container:active::before {
  left: 100%;
}

.page-current-container:active {
  transform: translateY(4rpx) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
}

/* 跳转组 - 美化版 */
.goto-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-left: 20rpx;
  padding: 8rpx 12rpx;
  background: rgba(24, 144, 255, 0.05);
  border-radius: 20rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.1);
  transition: all 0.3s ease;
}

.goto-group:active {
  background: rgba(24, 144, 255, 0.1);
  transform: scale(0.98);
}

.goto-label {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  white-space: nowrap;
  min-width: 40rpx;
}

.goto-input {
  width: 70rpx;
  height: 48rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.3);
  border-radius: 8rpx;
  padding: 0 8rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.goto-input:focus {
  border-color: #1890ff;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.1), inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.goto-input::placeholder {
  color: #bbb;
  font-size: 24rpx;
}

.goto-button {
  height: 48rpx;
  width: 20rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 30rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: white;
  border-radius: 80rpx;
  border: none;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.goto-button:active {
  transform: translateY(2rpx) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
}

.goto-button:disabled {
  opacity: 0.5;
  background: #f5f5f5;
  color: #ccc;
  box-shadow: none;
}

.goto-button:disabled:active {
  transform: none;
  box-shadow: none;
}

/* 响应式优化 */
@media screen and (max-width: 400px) {
  .pagination-container {
    padding: 20rpx 24rpx;
  }
  
  .pagination-controls {
    gap: 16rpx;
  }
  
  .pagination-arrow {
    width: 54rpx;
    height: 54rpx;
  }
  
  .arrow-icon {
    width: 24rpx;
    height: 24rpx;
  }
  
  .page-current-container {
    min-width: 70rpx;
    height: 54rpx;
    font-size: 30rpx;
  }
  
  .goto-group {
    margin-left: 16rpx;
    gap: 10rpx;
  }
  
  .goto-input {
    width: 60rpx;
    height: 44rpx;
    font-size: 24rpx;
  }
  
  .goto-button {
    height: 44rpx;
    min-width: 60rpx;
    font-size: 22rpx;
    padding: 0 10rpx;
  }
}

/* 微光动画效果 */
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.pagination-arrow:active::before,
.page-current-container:active::before {
  animation: shimmer 0.6s ease-in-out;
}

/* 返回顶部按钮优化 */
.float-nav-tool {
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(24, 144, 255, 0.5);
  z-index: 1000;
  opacity: 0.92;
  transition: all 0.3s;
  font-size: 40rpx;
  color: #fff;
}

.float-nav-tool:active {
  transform: scale(0.9);
  opacity: 1;
  box-shadow: 0 6rpx 25rpx rgba(24, 144, 255, 0.5);
}