/* pages/index/index.wxss */
.container {
  padding: 0;
  background: 
    linear-gradient(to bottom, rgba(235, 247, 255, 0.85), rgba(224, 243, 255, 0.85)),
    url('https://newlan.oss-cn-shanghai.aliyuncs.com/%E7%99%BB%E5%BD%95%E8%83%8C%E6%99%AF1.png');
  background-size: cover;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 顶部装饰  */
.top-decoration {
  position: relative;
  height: 100rpx;
  background: linear-gradient(to bottom, #67a9cf, #3f8eb4);
  border-bottom-left-radius: 50% 40%;
  border-bottom-right-radius: 50% 40%;
  margin-bottom: 30rpx;
}

.cloud {
  position: absolute;
  width: 180rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
}

.cloud-left {
  top: 30rpx;
  left: -50rpx;
}

.cloud-right {
  top: 25rpx;
  right: -50rpx;
}

.seal {
  position: absolute;
  bottom: -35rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 180rpx;
  height: 70rpx;
  background: #5d9cec;
  color: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 10;
}

/* 标题区域 - 上边距减小 */
.title-container {
  text-align: center;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c6a91;
  margin-bottom: 12rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
}

.title::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 90rpx;
  height: 4rpx;
  background: #3498db;
  border-radius: 2rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #7299af;
  letter-spacing: 4rpx;
}

/* 年级选择模块 */
.grade-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx; 
  margin-bottom: 15rpx;
  padding: 15rpx 30rpx;
  background: linear-gradient(145deg, rgba(240, 249, 255, 0.95), rgba(224, 243, 255, 0.95));
  border: 1rpx solid rgba(94, 171, 214, 0.3); 
  border-radius: 30rpx; 
  box-shadow: 0 4rpx 12rpx rgba(94, 171, 214, 0.15); 
  cursor: pointer;
  transition: all 0.3s ease; 
}


.grade-selector:active {
  transform: translateY(3rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(94, 171, 214, 0.2);
}


.grade-text {
  font-size: 28rpx;
  color: #2c6a91;
  letter-spacing: 2rpx;
}


.grade-arrow {
  font-size: 24rpx;
  color: #7299af;
}

/* 网格布局 - 上边距减小 */
.grid-container {
  padding: 0 30rpx;
  margin-bottom: 60rpx;
}

.grid-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 25rpx;
  
  /* 增加行间距 */
  gap: 25rpx; /* 新增：增加行内元素间距 */
}

.grid-item {
  background: 
    linear-gradient(145deg, rgba(240, 249, 255, 0.92), rgba(224, 243, 255, 0.92));
  border-radius: 20rpx;
  padding: 25rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(94, 171, 214, 0.18);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(200, 225, 255, 0.4);
  
  /* 调整宽度以适应增加的间距 */
  width: calc(50% - 12.5rpx); /* 新增：减少宽度以适应间距 */
  
  height: 250rpx;
  position: relative;
  overflow: hidden;
}

.grid-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(to right, #b8daf2, #67a9cf);
}

.grid-item:active {
  transform: translateY(4rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(94, 171, 214, 0.25);
}

.grid-item.placeholder {
  visibility: hidden;
}

.icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  transition: transform 0.3s ease;
  color: #3498db;
}

.grid-item:active .icon {
  transform: scale(1.1);
}

.grid-item text {
  font-size: 30rpx;
  color: #2c6a91;
  text-align: center;
  font-weight: 500;
  line-height: 1.4;
}

/* 底部装饰 - 上边距减小 */
.bottom-decoration {
  position: relative;
  padding: 30rpx 0;
  margin-top: auto;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
}

.scroll-decoration {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 3rpx;
  background: linear-gradient(to right, transparent, #5d9cec, transparent);
}

.quote {
  text-align: center;
  font-size: 28rpx;
  color: #7299af;
  font-style: italic;
  margin-top: 30rpx;
  letter-spacing: 2rpx;
}