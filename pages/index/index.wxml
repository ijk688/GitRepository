<!-- pages/index/index.wxml -->
<view>
  <button bindtap="navigateTo" data-url="textbookQuestion">课内真题</button>
  </view>
<view class="container">
  <!-- 顶部装饰 -->
  <view class="top-decoration">
    <view class="cloud cloud-left"></view>
    <view class="cloud cloud-right"></view>
    <view class="seal">灵柩诗鉴</view>
  </view>
  
  <!-- 标题区域 -->
  <view class="title-container">
    <view class="title">语文学习助手</view>
    <view class="subtitle">传承中华文化 · 精研语言之美</view>
  </view>
  <!-- 年级展示/年级更新模块-->
  <view class="grade-selector" bindtap="navigateToGradeSelect">
    <view class="grade-text">当前年级：{{currentGrade}}</view> 
    <view class="grade-arrow">></view> 
  </view>

  
  <!-- 功能网格 -->
 
  <view class="grid-container">
    <view class="grid-row">
    
      <button class="grid-item" bindtap="navigateTo" data-url="Books">
        <view class="icon">📚</view>
        <text>古籍大全</text>
      </button>
      
      <button class="grid-item" bindtap="navigateTo" data-url="bookssearch">
        <view class="icon">🔍</view>
        <text>古文查询</text>
      </button>
    </view>
    
    <view class="grid-row">
      <button class="grid-item" bindtap="navigateTo" data-url="poem">
        <view class="icon">📜</view>
        <text>古诗查询</text>
      </button>
      
      <button class="grid-item" bindtap="navigateTo" data-url="word">
        <view class="icon">📖</view>
        <text>词语查询</text>
      </button>
    </view>
    
    <view class="grid-row">
      <button class="grid-item" bindtap="navigateTo" data-url="aiword">
        <view class="icon">🤖</view>
        <text>词语练习</text>
      </button>
      
      <button class="grid-item" bindtap="navigateTo" data-url="sentence">
        <view class="icon">✒️</view>
        <text>断句一览</text>
      </button>
    </view>
    
    <view class="grid-row">
      <button class="grid-item" bindtap="navigateTo" data-url="aisentence">
        <view class="icon">🧠</view>
        <text>断句练习</text>
      </button>
      
      <!-- 新增：内容查询按钮 -->
      <button class="grid-item" bindtap="navigateTo" data-url="ContentSearch">
        <view class="icon">🔎</view>
        <text>内容查询</text>
      </button>
    </view>
  </view>
  
  <!-- 底部装饰 -->
  <view class="bottom-decoration">
    <view class="scroll-decoration"></view>
    <view class="quote">书山有路勤为径，学海无涯苦作舟</view>
  </view>
</view>