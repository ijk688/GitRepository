.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  padding-top: 0; /* 移除顶部内边距 */
}

/* 独立书籍标题 - 固定在顶部 */
.book-header {
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 15rpx 30rpx;
  background: linear-gradient(to right, #4a6baf, #3a5a9f);
  box-shadow: 0 4rpx 12rpx rgba(74, 107, 175, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx; /* 适当高度 */
}

.book-title {
  font-size: 44rpx; /* 大字体突出 */
  font-weight: bold;
  color: white;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

/* 独立章节标题 - 位于书籍标题下方 */
.chapter-header {
  position: sticky;
  top: 100rpx; /* 紧贴书籍标题下方 */
  z-index: 95;
  padding: 15rpx 30rpx;
  background-color: #f0f5ff;
  border-bottom: 1rpx solid #e0e8f7;
  box-shadow: 0 4rpx 8rpx rgba(74, 107, 175, 0.1);
}

.chapter-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #3a5a9f;
  text-align: center;
  position: relative;
  padding-left: 20rpx;
}

