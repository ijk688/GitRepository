.page-container {
  padding: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.grade-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 20rpx;
  gap: 20rpx;
}


.grade-item {
  /* 不同单位之间的运算函数，注意运算符的前后要有空格 */
  width: calc(33.33% - 15rpx);
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.grade-item.active {
  background-color: #e6f7ff;
  color: #2f80ed;
  border: 1rpx solid #2f80ed;
}

/* 暂不设置样式 */
.not-set {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin: 40rpx 0;
}

/* 保存按钮样式 */
.save-btn {
  width: 100%;
  height: 90rpx;
  background-color: #2f80ed;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.save-btn::after {
  border: none; 
}