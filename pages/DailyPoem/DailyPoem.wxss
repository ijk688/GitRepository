/* pages/DailyPoem/DailyPoem.wxss */
/* 页面容器 */
.page-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  padding-top: calc(var(--status-bar-height) + 44px);
  box-sizing: border-box;
}

/* 背景图 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
  opacity: 1;
}

/* 遮罩层 */
.content-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255,255,255,0.4);
  z-index: -1;
}

/* 题词样式 */
.motto {
  width: 100%;
  text-align: center;
  padding: 15px 0;
  flex-shrink: 0;
}

.motto text {
  font-size: 22px;
  font-weight: bold;
  color: #333;
  letter-spacing: 4px;
  text-shadow: 0 1px 2px rgba(255,255,255,0.8);
}

/* 内容容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15px 20px 60px;
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/*  诗词卡片 */
.poem-card {
  width: 90%;
  background-color: rgba(255,255,255,0.88);
  border-radius: 10px;
  padding: 25px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.1);
  margin-bottom: 15px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  max-height: 65vh;
}

/* 诗词标题/作者*/
.title {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 12px;
  color: #222;
  flex-shrink: 0;
}

.author {
  font-size: 17px;
  color: #444;
  text-align: center;
  margin-bottom: 22px;
  flex-shrink: 0;
}

/*诗词内容*/
.content {
  text-align: center;
  margin: 10px 0;
  padding: 12px;
  width: 100%;
  height: 280px;
  max-height: 280px;
  overflow-y: scroll;
  box-sizing: border-box;
}

/* 诗句样式*/
.couplet-line {
  font-size: 16px;
  margin: 14px 0;
  line-height: 2.8;
  word-break: keep-all;
  text-align: center;
  letter-spacing: 0.5px;
  color: #222;
  font-weight: 500;
  white-space: pre-wrap;
  display: block;
  flex-shrink: 0;
}

/* 滚动提示 */
.scroll-tip {
  width: 100%;
  text-align: center;
  margin-top: 10px;
  margin-bottom: 5px;
  font-size: 22rpx;
  color: #999;
  animation: float 2s ease-in-out infinite;
  flex-shrink: 0;
}

/* 日期 */
.date {
  font-size: 15px;
  color: #555;
  text-align: right;
  margin-top: 10px;
  flex-shrink: 0;
}

/*  动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(4rpx);
  }
}

@keyframes rotate360 {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/*按钮容器*/
.button-container {
  width: 90%;
  display: flex;
  justify-content: space-between;
  gap: 15px;
  margin-top: 15px;
  padding: 0 5px 15px;
  flex-shrink: 0;
}

/* 统一按钮样式 */
.action-button {
  flex: 1;
  background-color: #A7CBDB;
  color: white;
  border-radius: 10px;
  padding: 10px 8px;
  font-size: 17px;
  border: none;
  box-shadow: 0 2px 8px rgba(58, 124, 165, 0.3);
  transition: all 0.3s ease;
  min-height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 清除微信默认按钮边框 */
.action-button::after {
  border: none;
}

/* 按钮点击态 */
.action-button:active {
  background-color: #2C5F7E;
  transform: scale(0.98);
}

/* 按钮禁用态 */
.action-button[disabled] {
  background-color: #7BA7C4;
  color: rgba(255, 255, 255, 0.7);
}

/* 刷新图标 */
.refresh-icon {
  width: 22px;
  height: 22px;
  margin-left: 8px;
  transition: transform .3s ease;
}

.refreshing {
  animation: rotate360 1s linear infinite;
}