page {
  background-image: url('https://newlan.oss-cn-shanghai.aliyuncs.com/%E7%99%BB%E5%BD%95%E8%83%8C%E6%99%AF1.png');
  background-size: cover;
  background-position: center;
  height: 100%;
  position: relative;
  overflow: hidden;
}

/* 添加背景覆盖层 */
page::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(240, 249, 255, 0.85);
  z-index: -1;
}

/* 头部样式 - 淡蓝渐变设计 */
.header {
  text-align: center;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #4da1ff, #5cadff);
  border-radius: 0 0 30rpx 30rpx;
  color: white;
  box-shadow: 0 10rpx 30rpx rgba(77, 161, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 50%;
}

.app-title {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 15rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.app-subtitle {
  font-size: 30rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

/* 搜索区域 - 淡蓝卡片设计 */
.search-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 35rpx;
  margin: 30rpx 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(77, 161, 255, 0.15);
  border: 1rpx solid rgba(224, 240, 255, 0.8);
}

.search-box {
  display: flex;
  gap: 20rpx;
  margin-bottom: 35rpx;
}

.search-input {
  flex: 1;
  padding: 25rpx 35rpx;
  border: 2rpx solid #d0e8ff;
  border-radius: 18rpx;
  font-size: 30rpx;
  background: #f7fbff;
  color: #2c3e50;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.search-input:focus {
  outline: none;
  border-color: #4da1ff;
  box-shadow: 0 0 0 3rpx rgba(77, 161, 255, 0.2);
}

.search-btn {
  padding: 25rpx 40rpx;
  border-radius: 18rpx;
  background: linear-gradient(to right, #4da1ff, #5cadff);
  color: white;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 6rpx 15rpx rgba(77, 161, 255, 0.3);
}

/* 频率控制 - 淡蓝标签设计 */
.frequency-controls {
  display: flex;
  align-items: center;
  margin-bottom: 35rpx;
}

.frequency-label {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 600;
  min-width: 160rpx;
}

.frequency-tags {
  flex: 1;
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.frequency-tag {
  padding: 16rpx 28rpx;
  border-radius: 40rpx;
  background: #e6f2ff;
  color: #4da1ff;
  font-size: 28rpx;
  font-weight: 600;
  white-space: nowrap;
  margin-bottom: 12rpx;
  border: 1rpx solid transparent;
}

.frequency-tag.active {
  background: #4da1ff;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(77, 161, 255, 0.3);
}

/* 生成按钮 - 淡蓝渐变设计 */
.generate-btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 18rpx;
  background: linear-gradient(to right, #4da1ff, #5cadff);
  color: white;
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 25rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(77, 161, 255, 0.3);
  position: relative;
  overflow: hidden;
}

/* 词语列表样式 - 淡蓝网格布局 */
.word-list-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 35rpx;
  margin: 0 25rpx 35rpx;
  box-shadow: 0 8rpx 25rpx rgba(77, 161, 255, 0.15);
  border: 1rpx solid rgba(224, 240, 255, 0.8);
}

.list-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #4da1ff;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0f0ff;
  position: relative;
}

.list-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 100rpx;
  height: 4rpx;
  background: #4da1ff;
  border-radius: 2rpx;
}

.word-list {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220rpx, 1fr));
  gap: 25rpx;
}

.word-item {
  background: #f7fbff;
  border-radius: 15rpx;
  padding: 25rpx;
  text-align: center;
  border-left: 5rpx solid #4da1ff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.word-item:hover {
  transform: translateY(-3rpx);
  box-shadow: 0 6rpx 15rpx rgba(77, 161, 255, 0.2);
}

.item-word {
  font-size: 38rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
  color: #2c3e50;
}

.item-pinyin {
  font-size: 26rpx;
  color: #5cadff;
  display: block;
  margin-bottom: 8rpx;
}

.item-priority {
  font-size: 24rpx;
  background: linear-gradient(to right, #a8d4ff, #8bc5ff);
  color: #2c3e50;
  padding: 6rpx 18rpx;
  border-radius: 30rpx;
  display: inline-block;
  font-weight: 600;
}

/* 词语详情区域 - 淡蓝卡片设计 */
.word-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 35rpx;
  margin: 0 25rpx 35rpx;
  box-shadow: 0 8rpx 25rpx rgba(77, 161, 255, 0.15);
  border-top: 8rpx solid #4da1ff;
  border: 1rpx solid rgba(224, 240, 255, 0.8);
}

.word-header {
  display: flex;
  align-items: flex-end;
  margin-bottom: 35rpx;
  padding-bottom: 25rpx;
  border-bottom: 2rpx solid #e0f0ff;
}

.word-text {
  font-size: 54rpx;
  font-weight: 800;
  color: #2c3e50;
  margin-right: 25rpx;
}

.word-pinyin {
  font-size: 34rpx;
  color: #5cadff;
  margin-right: 35rpx;
}

.priority-tag {
  margin-left: auto;
  padding: 12rpx 35rpx;
  border-radius: 40rpx;
  background: linear-gradient(to right, #a8d4ff, #8bc5ff);
  color: #2c3e50;
  font-size: 26rpx;
  font-weight: 700;
}

.meaning-section {
  margin-bottom: 45rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #4da1ff;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 34rpx;
  background: #4da1ff;
  border-radius: 4rpx;
}

.meaning-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350rpx, 1fr));
  gap: 30rpx;
}

.meaning-card {
  background: #f7fbff;
  border-radius: 18rpx;
  padding: 28rpx;
  border-left: 6rpx solid #4da1ff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.meaning-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 25rpx;
}

.meaning-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
}

.meaning-type {
  font-size: 26rpx;
  background: #e6f2ff;
  color: #4da1ff;
  padding: 6rpx 20rpx;
  border-radius: 40rpx;
  font-weight: 600;
}

.examples-container {
  margin-top: 25rpx;
  border-top: 2rpx dashed #d0e8ff;
  padding-top: 25rpx;
}

.example-item {
  margin-bottom: 25rpx;
  padding-bottom: 25rpx;
  border-bottom: 2rpx solid #e0f0ff;
}

.example-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.example-text {
  font-size: 28rpx;
  color: #2c3e50;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.example-source {
  font-size: 26rpx;
  color: #5cadff;
  font-style: italic;
}

/* 空状态 - 淡蓝设计 */
.empty-state {
  text-align: center;
  padding: 70rpx 35rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin: 0 25rpx 35rpx;
  box-shadow: 0 8rpx 25rpx rgba(77, 161, 255, 0.15);
  border: 1rpx solid rgba(224, 240, 255, 0.8);
}

.empty-icon {
  font-size: 100rpx;
  color: #a8d4ff;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-title {
  font-size: 38rpx;
  color: #4da1ff;
  font-weight: 600;
  margin-bottom: 25rpx;
  display: block;
}

.empty-text {
  font-size: 30rpx;
  color: #5cadff;
  max-width: 80%;
  margin: 0 auto;
  line-height: 1.6;
}

/* 按钮样式 - 统一淡蓝设计 */
.view-btn {
  padding: 32rpx 0;
  border-radius: 18rpx;
  background: linear-gradient(to right, #4da1ff, #5cadff);
  color: white;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  display: block;
  margin: 35rpx 25rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(77, 161, 255, 0.3);
}

/* 响应式调整 */
@media (max-width: 768px) {
  .word-list {
    grid-template-columns: repeat(auto-fill, minmax(150rpx, 1fr));
  }
  
  .meaning-grid {
    grid-template-columns: 1fr;
  }
}