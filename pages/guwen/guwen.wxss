.pagination-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top: 1rpx solid #e6f7ff;
  z-index: 100;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
}

.total-count {
  display: none;
}

.pagination-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  max-width: 100%;
}

.pagination-arrow {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f6f9ff 0%, #e6f7ff 100%);
  border: 2rpx solid rgba(24, 144, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.pagination-arrow::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.1), transparent);
  transition: left 0.5s;
}

.pagination-arrow:active::before {
  left: 100%;
}

.pagination-arrow:active {
  transform: translateY(4rpx) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
  background: linear-gradient(135deg, #e6f7ff 0%, #cce7ff 100%);
}

.pagination-arrow.disabled {
  opacity: 0.4;
  background: #f5f5f5;
  border-color: #e0e0e0;
  color: #ccc;
}

.pagination-arrow.disabled:active {
  transform: none;
  box-shadow: none;
  background: #f5f5f5;
}

.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  transition: transform 0.2s ease;
}

.pagination-arrow:active .arrow-icon {
  transform: scale(0.9);
}

.page-current-container {
  min-width: 80rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.page-current-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.page-current-container:active::before {
  left: 100%;
}

.page-current-container:active {
  transform: translateY(4rpx) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
