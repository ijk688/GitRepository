/* logs.wxss */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(to bottom, #e6f7ff, #f8f9fa);
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  position: relative;
  padding-bottom: 150rpx;
}

/* 搜索栏 - 增强视觉层次感 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  padding: 22rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.18);
  backdrop-filter: blur(10rpx);
  border-bottom: 1rpx solid #e6f7ff;
}

.search-input {
  flex: 1;
  height: 86rpx;
  border: 1rpx solid #d9e9fc;
  border-radius: 46rpx;
  padding: 0 35rpx;
  font-size: 32rpx;
  margin-right: 24rpx;
  background-color: rgba(240, 249, 255, 0.9);
  box-shadow: inset 0 3rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.search-input:focus {
  border-color: #1890ff;
  background-color: #ffffff;
  box-shadow: inset 0 3rpx 12rpx rgba(24, 144, 255, 0.1);
}

.search-btn {
  height: 86rpx;
  min-width: 140rpx;
  border-radius: 46rpx;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  font-size: 32rpx;
  line-height: 86rpx;
  padding: 0 20rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.35);
  font-weight: 500;
  transition: all 0.15s;
}

.search-btn:active {
  transform: translateY(3rpx);
  box-shadow: 0 3rpx 12rpx rgba(24, 144, 255, 0.35);
}

/* 结果列表 - 优化留白和结构 */
.result-list {
  flex: 1;
  width: 100%;
  padding: 0;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  padding-top: 0rpx; /* 调整顶部间距 */
  padding-bottom: -10rpx;
}

/* 顶部占位符 - 确保内容从搜索栏下方开始 */
.top-spacer {
  height: 120rpx; /* 调整高度 */
}

/* 底部占位符 - 确保内容不被分页栏遮挡 */
.bottom-spacer {
  height: 0rpx; /* 等于分页栏高度 */
}

/* 搜索头部 - 上移 */
.search-header {
  padding: 0 30rpx 10rpx;
  margin-top: -110rpx; /* 上移搜索结果标题 */
}

.search-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 5rpx;
}

.result-count {
  font-size: 32rpx;
  color: #666;
  font-weight: 500;
  padding: 0 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 诗词卡片 - 优雅设计 (与poems页面一致) */
.result-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(221, 238, 255, 0.8);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: all 0.3s ease;
}

.result-card:active {
  transform: translateY(-6rpx);
  box-shadow: 0 15rpx 35rpx rgba(0, 0, 0, 0.1);
}

.result-card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #1890ff, #52c41a);
  opacity: 0.8;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  line-height: 1.45;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  padding-left: 20rpx;
  position: relative;
}

.title::after {
  content: "·";
  position: absolute;
  left: 0;
  top: 0;
  color: #1890ff;
  font-weight: 900;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx dashed #e8f0fa;
}

.author, .dynasty {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  position: relative;
  padding-left: 8rpx;
}

.author::before {
  content: "作者: ";
  color: #1890ff;
  font-weight: 500;
}

.dynasty::before {
  content: "朝代: ";
  color: #1890ff;
  font-weight: 500;
}

.content {
  font-size: 34rpx;
  color: #333;
  line-height: 1.75;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  flex: 1;
  font-family: "KaiTi", "楷体", sans-serif;
  text-indent: 2em;
  padding-top: 8rpx;
}

/* 空状态与加载状态增强 */
.empty-result, .loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
  padding-top: 100rpx;
}

.empty-result .empty-icon {
  font-size: 200rpx;
  color: #e6f7ff;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 36rpx;
  color: #595959;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.empty-tip {
  font-size: 30rpx;
  color: #8c8c8c;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.suggestion-btn {
  display: inline-block;
  background-color: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  border-radius: 40rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  margin: 6rpx 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 8rpx solid rgba(24, 144, 255, 0.2);
  border-radius: 50%;
  border-top-color: #1890ff;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分页容器优化 - 美化版 */
.pagination-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-top: 1rpx solid #e6f7ff;
  z-index: 100;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20rpx);
}

/* 移除总条数显示 */
.total-count {
  display: none;
}

/* 页码控制 - 重新布局和美化 */
.pagination-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  max-width: 100%;
}

/* 箭头按钮 - 美化版 */
.pagination-arrow {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f6f9ff 0%, #e6f7ff 100%);
  border: 2rpx solid rgba(24, 144, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.pagination-arrow::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(24, 144, 255, 0.1), transparent);
  transition: left 0.5s;
}

.pagination-arrow:active::before {
  left: 100%;
}

.pagination-arrow:active {
  transform: translateY(4rpx) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.2);
  background: linear-gradient(135deg, #e6f7ff 0%, #cce7ff 100%);
}

.pagination-arrow.disabled {
  opacity: 0.4;
  background: #f5f5f5;
  border-color: #e0e0e0;
  color: #ccc;
}

.pagination-arrow.disabled:active {
  transform: none;
  box-shadow: none;
  background: #f5f5f5;
}

/* 箭头图标 */
.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  transition: transform 0.2s ease;
}

.pagination-arrow:active .arrow-icon {
  transform: scale(0.9);
}

/* 当前页码容器 - 美化版 */
.page-current-container {
  min-width: 80rpx;
  height: 60rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: 600;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.page-current-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.page-current-container:active::before {
  left: 100%;
}

.page-current-container:active {
  transform: translateY(4rpx) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
}

/* 跳转组 - 美化版 */
.goto-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-left: 20rpx;
  padding: 8rpx 12rpx;
  background: rgba(24, 144, 255, 0.05);
  border-radius: 20rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.1);
  transition: all 0.3s ease;
}

.goto-group:active {
  background: rgba(24, 144, 255, 0.1);
  transform: scale(0.98);
}

.goto-label {
  font-size: 24rpx;
  color: #1890ff;
  font-weight: 500;
  white-space: nowrap;
  min-width: 40rpx;
}

.goto-input {
  width: 70rpx;
  height: 48rpx;
  border: 1rpx solid rgba(24, 144, 255, 0.3);
  border-radius: 8rpx;
  padding: 0 8rpx;
  font-size: 26rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.goto-input:focus {
  border-color: #1890ff;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(24, 144, 255, 0.1), inset 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.goto-input::placeholder {
  color: #bbb;
  font-size: 24rpx;
}

.goto-button {
  height: 48rpx;
  min-width: 70rpx;
  line-height: 48rpx;
  padding: 0 12rpx;
  font-size: 24rpx;
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: white;
  border-radius: 8rpx;
  border: none;
  font-weight: 500;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.goto-button:active {
  transform: translateY(2rpx) scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
}

.goto-button:disabled {
  opacity: 0.5;
  background: #f5f5f5;
  color: #ccc;
  box-shadow: none;
}

.goto-button:disabled:active {
  transform: none;
  box-shadow: none;
}

/* 响应式优化 */
@media screen and (max-width: 400px) {
  .pagination-container {
    padding: 20rpx 24rpx;
  }
  
  .pagination-controls {
    gap: 16rpx;
  }
  
  .pagination-arrow {
    width: 54rpx;
    height: 54rpx;
  }
  
  .arrow-icon {
    width: 24rpx;
    height: 24rpx;
  }
  
  .page-current-container {
    min-width: 70rpx;
    height: 54rpx;
    font-size: 30rpx;
  }
  
  .goto-group {
    margin-left: 16rpx;
    gap: 10rpx;
  }
  
  .goto-input {
    width: 60rpx;
    height: 44rpx;
    font-size: 24rpx;
  }
  
  .goto-button {
    height: 44rpx;
    min-width: 60rpx;
    font-size: 22rpx;
    padding: 0 10rpx;
  }
}

/* 微光动画效果 */
@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.pagination-arrow:active::before,
.page-current-container:active::before {
  animation: shimmer 0.6s ease-in-out;
}

/* 返回顶部按钮优化 */
.float-nav-tool {
  position: fixed;
  bottom: 200rpx;
  right: 40rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(24, 144, 255, 0.5);
  z-index: 1000;
  opacity: 0.92;
  transition: all 0.3s;
  font-size: 40rpx;
  color: #fff;
}

.float-nav-tool:active {
  transform: scale(0.9);
  opacity: 1;
  box-shadow: 0 6rpx 25rpx rgba(24, 144, 255, 0.5);
}