<view class="container">
  <!-- 标题区域 -->
  <view class="header">
    <text class="title">语言学习助手</text>
    <text class="subtitle">智能辅助工具</text>
  </view>

  <!-- 功能区 -->
  <view class="card-container">
    <!-- 词语查询卡片 -->
    <view class="function-card word-card" bindtap="navigateToWord">
      <view class="card-content">
        <view class="card-icon">
          <view class="icon">🔍</view>
        </view>
        <view class="card-text">
          <text class="card-title">词语查询</text>
          <text class="card-desc">快速查询词语释义、用法及例句</text>
          <view class="card-hint">
            <text>点击进入</text>
            <text class="arrow">→</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 断句训练卡片 -->
    <view class="function-card sentence-card" bindtap="navigateToSentenceSegmentation">
      <view class="card-content">
        <view class="card-icon">
          <view class="icon">✂️</view>
        </view>
        <view class="card-text">
          <text class="card-title">断句训练</text>
          <text class="card-desc">提升中文断句能力的专业训练</text>
          <view class="card-hint">
            <text>点击进入</text>
            <text class="arrow">→</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  

  <!-- 底部提示 -->
  <view class="footer">
    <text>选择功能开始学习</text>
  </view>
</view>

<!-- 在文件底部添加 -->
<view class="float-nav-tool" bindtap="navigateToIndex">
  <text class="float-nav-icon">🏠</text>
</view>
