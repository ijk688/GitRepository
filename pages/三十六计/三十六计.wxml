<view class="container">
  <!-- 目录盒子 -->
  <view class="directory-box {{isCollapsed ? 'collapsed' : ''}}">
    <view class="directory-header" bindtap="toggleDirectory">
      <text class="main-title">{{directoryTitle}}</text>
      <image class="toggle-icon" src="/images/{{isCollapsed ? 'down' : 'up'}}-arrow.png"></image>
    </view>
    
    <view class="directory-content">
      <view class="category-item" wx:for="{{categoryList}}" wx:key="id">
        <view class="category-header" bindtap="toggleCategory" data-index="{{index}}">
          <text class="category-title">{{item.name}}</text>
          <image class="category-arrow" src="/images/right-arrow.png" wx:if="{{item.subItems.length > 0}}"></image>
        </view>
        
        <view class="sub-items" wx:if="{{item.expanded}}">
          <view class="sub-item" wx:for="{{item.subItems}}" wx:key="id" 
                bindtap="selectStrategy" data-category="{{index}}" data-index="{{subIndex}}">
            <text>{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 内容盒子 -->
  <view class="content-box">
    <view class="content-header">
      <text>{{currentStrategy.title || '请选择计策'}}</text>
    </view>
    <scroll-view class="content-text" scroll-y>
      <text>{{currentStrategy.content || ''}}</text>
    </scroll-view>
  </view>
</view>