/* 题目容器基础样式 */
/* 重置默认间距 */
page {
    padding: 0;
    margin: 0;
  }
  
  /* 题目列表容器 */
  .question-list-container {
    padding: 20rpx 24rpx;
  }
  
  /* 题目项优化版 */
  .question-item {
    margin-bottom: 24rpx; /* 只保留底部间距 */
    padding: 28rpx;
    background: #ffffff;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  }
  
  /* 题目头部紧凑布局 */
  .question-header {
    margin-bottom: 20rpx;
    line-height: 1.4; /* 调整行高 */
  }
  
  /* 其他原有样式保持不变... */
  
  .q-id {
    font-weight: bold;
    color: #1677ff;
    margin-right: 10rpx;
  }
  
  /* 选项容器布局 */
  .options-container {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
  }
  
  /* 基础选项样式 */
  .option-item {
    padding: 20rpx 24rpx;
    margin-bottom: 10rpx;
    border-radius: 8rpx;
    background: #f5f5f5;
    border: 1px solid #eee;
  }
  
  /* 选项文字样式 */
  .option-text {
    font-size: 28rpx;
    color: #666;
  }
  
   /* 选中状态 - 极简版 */
.option-selected {
    background: #1890ff;
    border-color: #1890ff;
  }
  
  .option-selected .option-text {
    color: white;
  }
  /* 无内容显示修饰 */
  .empty-tip {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60vh; /* 占据屏幕60%高度确保垂直居中 */
    text-align: center;
  }
  
  .empty-text {
    color: #999999; /* 灰色字体 */
    font-size: 16px; /* 标准字号 */
    line-height: 1.5;
  }