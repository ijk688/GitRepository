/* 顶部搜索栏 - 协调版 */
.search-container {
    padding: 16rpx 24rpx;
    background: #ffffff;
    border-bottom: 1rpx solid #f0f0f0;
    position: sticky;
    top: 0;
    z-index: 10;
  }
  
  .search-box {
    display: flex;
    align-items: center;
    background: #f7f8fa;
    border-radius: 48rpx;
    padding: 0 24rpx;
    height: 72rpx;
  }
  
  .search-input {
    width:200rpx;
    padding: 0 16rpx;
    font-size: 28rpx;
    color: #333;
    background: transparent;
    text-align: center;
  }
  
  .type-picker {
    position: relative;
    /* flex: 0 0 160rpx; */
     width:300rpx;
    margin-right: 16rpx;
  }
  
  .type-picker::after {
    content: "";
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1rpx;
    height: 32rpx;
    background: #e5e6eb;
  }
  
  .picker-text {
    font-size: 28rpx;
    color: #666;
    padding: 8rpx 0;
    text-align: center;
  }
   
